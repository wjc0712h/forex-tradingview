gbp = (-eurgbp * 0.18 + gbpusd * 0.35 + gbpjpy * 0.22 + gbpchf * 0.12 + gbpaud * 0.08 + gbpcad * 0.04 + gbpnzd * 0.01)
chf = (-eurchf * 0.25 - usdchf * 0.35 - gbpchf * 0.20 + chfjpy * 0.10 - audchf * 0.06 - cadchf * 0.03 - nzdchf * 0.01)
