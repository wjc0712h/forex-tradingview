lengthSlow = input.int(21, title="Slow Length", group = "Length")
lengthSignal = input.int(8, title="Signal Length", group = "Length")
lengthSlope = input.int(2, "Slope Length", group = "Length")
lengthZscore = input.int(50, "Z-Score Length", group = "Length")
showAll = input.bool(true, "Show All", group = "Display")
showTable = input.bool(true, "Show Table", group = "Display")
apply_zero_sum = input.bool(true, "apply_zero_sum", group = "Display")

zscore(src, length) =>
    mean = ta.ema(src, length)
    stddev = ta.stdev(src, length)
    (src - mean) / stddev

rsi_macd_calc(src, fast, slow, sig) =>
    fast_ma = ta.ema(src, fast)
    slow_ma = ta.ema(src, slow)
    macd = zscore(fast_ma - slow_ma,lengthZscore)
    signal = ta.ema(macd, sig)
    rsi_val = ta.rsi(signal, lengthRSI)
    rsi_val

rsi_eur = rsi_macd_calc(eur, lengthFast, lengthSlow, lengthSignal)
rsi_usd = rsi_macd_calc(usd, lengthFast, lengthSlow, lengthSignal)
rsi_gbp = rsi_macd_calc(gbp, lengthFast, lengthSlow, lengthSignal)
